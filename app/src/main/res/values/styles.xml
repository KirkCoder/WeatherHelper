<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextCommon</item>
        <item name="preferenceTheme">@style/Preference</item>
    </style>

    <style name="Preference" parent="PreferenceThemeOverlay">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowBackground">@drawable/fragment_main_background</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.White" parent="AppTheme">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="DeleteBtn">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TempTextStyle">
        <item name="android:textSize">@dimen/temp_text_size</item>
    </style>
    <style name="TempIcoStyle">
        <item name="android:textSize">@dimen/temp_text_size_half</item>
    </style>
    <style name="TextStyleTitle">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>
    <style name="TextStyleSubTitle">
        <item name="android:textSize">@dimen/sub_title_size</item>
    </style>
    <style name="TextStyleMiddle">
        <item name="android:textSize">@dimen/middle_text_size</item>
    </style>
</resources>
