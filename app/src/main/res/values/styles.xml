<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowBackground">@drawable/fragment_main_background</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.White" parent="AppTheme">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextStylePrimary" parent="@style/TextAppearance.AppCompat.Body1"/>
    <style name="TextStyleCaption" parent="@style/TextAppearance.AppCompat.Caption"/>
    <style name="TextStyleTitle" parent="@style/TextAppearance.AppCompat.Title"/>
    <!--<style name="TextStyleTitle">-->
        <!--<item name="android:textSize">208sp</item>-->
    <!--</style>-->
</resources>
